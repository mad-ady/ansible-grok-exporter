[Unit]
Description=Grok Exporter for %i
After=network.target

[Service]
Type=simple
User={{ grok_exporter_system_user }}
Group={{ grok_exporter_system_group }}
Nice=-5
ExecStart={{ prometheus_exporters_common_root_dir }}/grok_exporter/grok_exporter -config /etc/grok_exporter/%i.conf

SyslogIdentifier="grok_exporter_%i"
Restart=always
StartLimitBurst=1000

[Install]
WantedBy=multi-user.target
